<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textViewStyle">@style/MuliTextViewStyle</item>
        <item name="android:actionBarStyle">@style/ToolbarTextTitle</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="ToolbarTextTitle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/text_med_color</item>
        <item name="android:textColorPrimary">@color/text_med_color</item>
        <item name="android:textColorSecondary">@color/text_med_color</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor"
            tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AuthInputTextLabel" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/gray_alpha</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_alpha</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="LargeTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>

    <style name="MediumTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>


    <style name="MediumTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>

    <style name="MuliTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">Muli-Black</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>

</resources>

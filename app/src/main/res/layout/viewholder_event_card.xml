<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_16"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/root_view"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="128dp"
            android:layout_height="98dp"
            android:layout_margin="@dimen/margin_8"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.concertbud.concertbuddies.CustomUI.AdjustableImageView
                    android:layout_width="match_parent"
                    android:id="@+id/event_image"
                    android:layout_height="198dp" />

                <ProgressBar
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/event_progress"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/margin_8"
            android:orientation="vertical">

            <TextView
                style="@style/LargeTitleText"
                android:id="@+id/event_name"
                android:text="Boston Calling 2018"
                android:textSize="@dimen/text_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/margin_8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boston, MA -- 250 going"
                android:id="@+id/event_location"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_light_color"
                android:layout_marginEnd="@dimen/margin_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boston, MA -- 250 going"
                android:layout_marginTop="@dimen/margin_8"
                android:id="@+id/event_desc"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_light_color"
                android:layout_marginEnd="@dimen/margin_10"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/stage"
            android:layout_marginEnd="@dimen/margin_12"
            android:src="@drawable/ic_filled_heart_red"/>

        <TextView
            android:layout_toEndOf="@+id/stage"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"
            style="@style/SmallTextStyle"
            android:id="@+id/event_time"
            android:textColor="@color/light_blue"
            android:layout_toStartOf="@+id/ride_distance"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Tomorrow 6PM - 9PM"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_12"
            style="@style/SmallTextStyle"
            android:id="@+id/event_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:text="25 miles"/>
    </RelativeLayout>
</LinearLayout>